{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./stage",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "module": "es2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "target": "es2019",
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
